{
  "compilerOptions": {
    //"target": "es2016",
    "module": "esnext",
    "target": "ES6",
    // "module": "commonjs",
    "noImplicitAny": false,
    "allowUmdGlobalAccess": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "bin",
    "removeComments": false,
    "typeRoots": [
      "./node_modules/@types/",
      "./src/typings"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  // "ts-node": {
  //   "esm": true,
  // },
  "typeRoots": [
    "typings"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "src/**/*.vue",
  ],
  "exclude": [
    "node_modules"
  ]
}
