{
  "compilerOptions": {
    //"target": "es2016",
    "module": "esnext",
    "target": "ES6",
    // "module": "commonjs",
    "noImplicitAny": false,
    "allowUmdGlobalAccess": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    // 支持import json
    "resolveJsonModule":true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "bin",
    "removeComments": false,
    "typeRoots": [
      "./node_modules/@types/",
      "./src/typings"
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "require": ["tsconfig-paths/register"]
  },
  "typeRoots": [
    "typings"
  ],
  "include": [
    "/**/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
